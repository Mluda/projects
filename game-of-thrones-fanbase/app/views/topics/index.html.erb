<h1>Prof's Game Of Thrones Voting Panel</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
    <td><%= link_to topic.title, topic %></td>
		<td><%= pluralize(topic.votes.count, "vote") %></td>
		<td><%= button_to 'Vote', upvote_topic_path(topic), method: :post %></td>
    <td><%= button_to 'UnVote', downvote_topic_path(topic), method: :post %></td>
    <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% if user_signed_in? %>
    <%= button_to "Logout", destroy_user_session_path, :method => :get, data: { confirm: 'Are you sure?' }  %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path %>
